{
  "name": "beeconnectlab-poc",
  "private": true,
  "packageManager": "pnpm@10.29.2",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "typecheck": "turbo run typecheck",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "clean": "turbo run clean",
    "db:migrate": "pnpm --filter api migration:run",
    "db:migrate:generate": "pnpm --filter api migration:generate",
    "db:seed": "pnpm --filter api seed",
    "test:e2e": "playwright test",
    "prepare": "husky"
  },
  "devDependencies": {
    "@beeconnectlab/eslint-config": "workspace:*",
    "@playwright/test": "^1.58.2",
    "eslint": "^9.21.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "prettier": "^3.5.3",
    "turbo": "^2.4.4",
    "typescript": "^5.7.3"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "bcrypt"
    ]
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yaml,yml}": [
      "prettier --write"
    ]
  }
}
